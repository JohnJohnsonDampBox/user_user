<div class="row">
  <aside class="span6">
    <section>
		<h1>
			<%= gravatar_for @user %>
			<%= @user.first_name %> <%= @user.last_name unless @user.last_name == nil %>, <%= @user.email %>
		</h1>
    </section>
  </aside>
    <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>