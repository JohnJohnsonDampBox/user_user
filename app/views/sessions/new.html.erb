<h1>Sign In To Your Account</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-lg btn-info" %>
    <% end %>

    <p>Not a User? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>